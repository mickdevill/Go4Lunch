<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <TextView
        android:id="@+id/restoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="the resto name"
        android:textSize="16sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="7dp"
        />


    <TextView
        android:id="@+id/restoAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kreml, kracnoya ploshad"
        android:textSize="16sp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
android:layout_below="@+id/restoName"
        />

    <TextView
        android:id="@+id/restoOpenColse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7h du mat mgl"
        android:textSize="16sp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/restoAddress"
        />

    <ImageView
        android:id="@+id/restImg"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_baseline_restaurant_menu_24"
      android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="7dp"
        />

    <TextView
        android:id="@+id/restoDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="666m"
        android:textSize="16sp"
        android:layout_toStartOf="@+id/restImg"
        android:layout_marginEnd="7dp"
        android:layout_marginTop="7dp"
        />

    <TextView
        android:id="@+id/workmatesWillGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="(2)"
        android:layout_below="@+id/restoDistance"
        android:layout_toStartOf="@+id/restImg"
        android:layout_marginEnd="7dp"
        android:layout_marginTop="7dp"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_toStartOf="@+id/workmatesWillGo"
        android:layout_below="@+id/restoDistance"
        android:layout_marginEnd="7dp"
        android:src="@drawable/workmate_will_go"
        />



</RelativeLayout>